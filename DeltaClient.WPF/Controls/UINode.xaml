<UserControl x:Class="DeltaClient.WPF.Controls.UINode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DeltaClient.WPF.Controls"
             xmlns:viewmodels='clr-namespace:DeltaClient.Core.ViewModels;assembly=DeltaClient.Core'
             x:Name='root'
             mc:Ignorable='d'>


  <Canvas MinHeight='{Binding Diameter}'
          MinWidth='{Binding Diameter}'>
    <Ellipse HorizontalAlignment='Center'
             VerticalAlignment='Center'
             Fill='{Binding Fill ,Mode=OneTime}'
             Stroke='Orange'
             MinHeight='{Binding Diameter}'
             MinWidth='{Binding Diameter}'/>
    <TextBlock Text='{Binding Text}'
               HorizontalAlignment='Center'
               VerticalAlignment='Bottom'
               FontSize='10'/>
  </Canvas>
</UserControl>
