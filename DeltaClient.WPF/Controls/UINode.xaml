<UserControl x:Class="DeltaClient.WPF.Controls.UINode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name='root' mc:Ignorable='d' d:DesignWidth='30' d:DesignHeight='30'
             Width='{Binding Diameter, Mode=OneTime}' Height='{Binding Diameter, Mode=OneTime}'
             MinHeight='20' MinWidth='20'>
  
  <Canvas    HorizontalAlignment='Stretch'
             VerticalAlignment='Stretch'>
    <Ellipse Fill='{Binding Fill ,Mode=OneTime}'
             HorizontalAlignment='Stretch'
             VerticalAlignment='Stretch'
             Stretch='Uniform'
             Stroke='Orange'
             d:DesignWidth='30'
             d:DesignHeight='30'
             MinHeight='20'
             MinWidth='20' />
    <TextBlock Text='{Binding Text}'
               HorizontalAlignment='Center'
               VerticalAlignment='Bottom'
               FontSize='10'/>
  </Canvas>
</UserControl>
