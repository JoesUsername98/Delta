<views:MvxWpfView xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:DeltaClient.WPF.Views"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  xmlns:controls="clr-namespace:DeltaClient.WPF.Controls"
                  mc:Ignorable="d" Background='Aquamarine' 
                  Height="1500" Width="1500"
                  x:Class="DeltaClient.WPF.Views.BinaryTreeView">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition></RowDefinition>
    </Grid.RowDefinitions>

    <StackPanel>
      <Slider HorizontalAlignment='Stretch'
              VerticalAlignment='Top'
              Maximum='5'
              Minimum='0'
              Value='{Binding TimePeriods}'/>
      <ItemsControl ItemsSource="{Binding MyBinaryTree, Mode=TwoWay}"
                  VerticalAlignment='Stretch'
                  Margin='30'
                  Grid.Column='0'>
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <controls:BinaryTreeControl HorizontalAlignment='Stretch'   VerticalAlignment='Center'
           xElementSeparation ='75'
           yElementSeparation ='50' />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <controls:UINode Fill='Chocolate' Diameter='30' Text=''/>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
    </StackPanel>



  </Grid>
</views:MvxWpfView>
