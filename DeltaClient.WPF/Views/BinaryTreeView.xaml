<views:MvxWpfView xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:DeltaClient.WPF.Views"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  xmlns:controls="clr-namespace:DeltaClient.WPF.Controls"
                  mc:Ignorable="d"
                  Background='Aquamarine'
                  d:DesignWidth='1000'
                  MaxHeight='1000'
                  x:Class="DeltaClient.WPF.Views.BinaryTreeView">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height='Auto'></RowDefinition>
      <RowDefinition></RowDefinition>
    </Grid.RowDefinitions>

      <Slider HorizontalAlignment='Stretch'
              VerticalAlignment='Top'
              Maximum='9'
              Minimum='0'
              Value='{Binding TimePeriods}'
              Grid.Row='0'/>
       <ItemsControl ItemsSource="{Binding MyBinaryTree, Mode=TwoWay}"
                    VerticalAlignment='Stretch'
                    HorizontalAlignment='Stretch'
                    Margin='30'
                    Grid.Row='1'
                    BorderBrush='Black'
                    BorderThickness='10'>
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <controls:BinaryTreeControl HorizontalAlignment='Stretch'
                                        VerticalAlignment='Stretch'
                                        xElementSeparation='100'
                                        yElementSeparation='50'
                                        OverlapNodes='False' />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <controls:UINode HorizontalAlignment='Stretch'
                             VerticalAlignment='Stretch'
                             Fill='Chocolate'
                             Diameter='30'
                             Text='' />
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

  </Grid>
</views:MvxWpfView>
