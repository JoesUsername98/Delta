<views:MvxWpfView xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:DeltaClient.WPF.Views"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  xmlns:controls="clr-namespace:DeltaClient.WPF.Controls"
                  mc:Ignorable="d" Background='Aquamarine' 
                  Height="400" Width="800"
                  x:Class="DeltaClient.WPF.Views.BinaryTreeView">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition></RowDefinition>
    </Grid.RowDefinitions>

    <ItemsControl ItemsSource="{Binding MyBinaryTree}"
                  HorizontalAlignment='Stretch'
                  VerticalAlignment='Stretch'>
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <controls:BinaryTreeControl/>
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <Canvas Background='White'
                  Height='Auto'
                  Width='Auto'>
            <Ellipse HorizontalAlignment='Center'
                     VerticalAlignment='Center'
                     Width='30'
                     Height='30'
                     Fill='Magenta'
                     Stroke='Orange' />
            <TextBlock Text="Binding Showtext add curly braces"
                       HorizontalAlignment='Center'
                       VerticalAlignment='Center' />
          </Canvas>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>

  </Grid>
</views:MvxWpfView>
